<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LLMSapp.Views.ItemsPage"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:LLMSapp.ViewModels"  
             xmlns:model="clr-namespace:LLMSapp.Models"  
             x:Name="BrowseItemsPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Ulozit" Command="{Binding AddItemCommand}" />
    </ContentPage.ToolbarItems>
    <!--
      x:DataType enables compiled bindings for better performance and compile time validation of binding expressions.
      https://docs.microsoft.com/xamarin/xamarin-forms/app-fundamentals/data-binding/compiled-bindings
    -->
    <StackLayout>
        <FlexLayout JustifyContent="SpaceBetween" AlignItems="Center" Padding="20, 0">
            <Label Text="Povolit zasielanie SMS"
               TextColor="Black"
               FontSize="20"/>
            <CheckBox IsChecked="{Binding IsCallEnabled}"/>
        </FlexLayout>
        <Entry Placeholder="Zadajte telefonne cislo"
           TextColor="Black"
           ReturnCommand="{Binding SavePhoneNumberCommand}"
           FontSize="20"
           Text="{Binding PhoneNumber}"
           PlaceholderColor="Gray"
           IsEnabled="{Binding IsCallEnabled}"
               IsVisible="true"/>
    </StackLayout>
    

</ContentPage>
